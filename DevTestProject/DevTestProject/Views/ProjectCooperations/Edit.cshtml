@model DevTestProject.ViewModel.ProjectCooperationsVm
@if (!String.IsNullOrEmpty(Model.ErrorMsg))
{
    <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
        @Model.ErrorMsg;
    </div>
}

<div class="row">

    @using (Html.BeginForm("SaveEdititngProjectCooperations", "ProjectCooperations", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.HiddenFor(m => m.Id)
        @Html.AntiForgeryToken()
        <h2>Project cooperations editing</h2>
        <hr />
        @Html.ValidationSummary()

        <div class="form-group">
            @Html.LabelFor(m => m.Project_Id, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Project_Id, Model.ProjectList, new { @class = "form-control", @placeholder = "Set project id" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Team_Id, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Team_Id, Model.TeamList, new { @class = "form-control", @placeholder = "Set team id" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DateAssigned, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.DateAssigned, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-5">
                <input type="submit" class="btn btn-success" value="Save" />
                <input class="btn btn-primary" type="button" value="Cancel" onclick="location.href='@Url.Action("Index")';" />
            </div>

        </div>
    }

</div>
